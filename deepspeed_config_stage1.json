{
    "zero_optimization": {
      "stage": 1,
      "allgather_partitions": true,
      "allgather_bucket_size": 5e8,
      "overlap_comm": true,
      "reduce_scatter": true,
      "reduce_bucket_size": 5e8,
      "contiguous_gradients": true
    },
    "train_batch_size": 128,
    "train_micro_batch_size_per_gpu": 32,
    "gradient_accumulation_steps": 1,
    "gradient_clipping": 1.0,
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 4e-4,
        "betas": [
          0.9,
          0.98
        ],
        "eps": 1e-6,
        "weight_decay": 0.1
      }
    },
    "scheduler": {
      "type": "WarmupDecayLR",
      "params": {
        "warmup_min_lr": 0,
        "warmup_max_lr": 4e-4,
        "warmup_type": "linear",
        "warmup_num_steps": 10,
        "total_num_steps": 100
      }
    }
  }
